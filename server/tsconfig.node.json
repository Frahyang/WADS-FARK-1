{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNEXT",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ESNEXT",
    "lib": ["ESNEXT"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["server.ts", "**/*.ts"],
  "exclude": ["node_modules"]
} 